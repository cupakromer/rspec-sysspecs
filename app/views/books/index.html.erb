<p id="notice"><%= notice %></p>

<h1>Books</h1>

<p>
  <h2>GitHub JSONP</h2>
  <pre id="github"></pre>
</p>

<p>
  <h2>Server Side JS</h2>
  <pre id="serverjs"></pre>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<%= link_to 'New Redirect Book', new_book_path(redirect: true) %>
<%= link_to 'New SSL Book', new_book_path(redirect: :ssl) %>

<%= button_to "All Books", books_path, method: :get, remote: true %>
